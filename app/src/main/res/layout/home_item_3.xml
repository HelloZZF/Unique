<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/create"
            android:layout_marginLeft="5dp"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/creative"
            android:tint="@color/yellow2"
            android:textColor="@color/gray"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/work"
            android:layout_toRightOf="@id/create"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="脑力开发"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="more >"
            android:textColor="@color/gray"
            android:textStyle="normal"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"/>

    </RelativeLayout>

    <com.unique.widget.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:shadowColor="#ee00bcd3"
        app:shadowDx="0dp"
        app:shadowDy="0dp"
        app:shadowRadius="6dp"
        app:shadowSide="all"
        app:mShadowPaddingBottom="-2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_image"
            android:scaleType="fitXY"
            android:src="@drawable/item3_1"/>

    </com.unique.widget.ShadowLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <com.unique.widget.ShadowLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:shadowColor="#ee7bbfea"
            app:shadowDx="0dp"
            app:shadowDy="0dp"
            app:shadowRadius="6dp"
            app:shadowSide="all"
            app:mShadowPaddingTop="-2"
            app:mShadowPaddingRight="-2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/item3_2"
                android:background="@drawable/round_image" />

        </com.unique.widget.ShadowLayout>

        <com.unique.widget.ShadowLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:shadowColor="#ee99cc00"
            app:shadowDx="0dp"
            app:shadowDy="0dp"
            app:shadowRadius="6dp"
            app:shadowSide="all"
            app:mShadowPaddingTop="-2"
            app:mShadowPaddingLeft="-2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/item3_3"
                android:background="@drawable/round_image" />

        </com.unique.widget.ShadowLayout>


    </LinearLayout>

</LinearLayout>